extends default

block content
	head
		meta(charset= "utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='/css/bootstrap.min.css')
		title Rick and Morty Characters
	body
		div
			div
				nav(class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark")
					div(class="container-fluid")
						a(class="navbar-brand")
							button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
							span.navbar-toggler-icon
						#navbarSupportedContent.collapse.navbar-collapse
							ul.navbar-nav.me-auto.mb-2.mb-lg-0
								li.nav-item
									a.nav-link.active(aria-current='page' href='http://localhost:3001') Home
							form.d-flex(role='search')
								input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
								button.btn.btn-outline-success(type='submit') Search
		div.d-flex.justify-content-center.m-2.p-2
			-console.log(obj)
			.card.mb-3
				img(src=obj.image class="card-img-top")
				.card-body
					h5.card-title.p-2 #{obj.name}
					p.card-text Species: #{obj.species}
					p.card-text Status: #{obj.status}
					p.card-text 
						| Origin: 
						a(href=obj.origin.url) #{obj.origin.name}